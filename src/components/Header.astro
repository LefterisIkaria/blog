---
import HeaderLink from "./HeaderLink.astro";

const links = [
  { href: "/", text: "Home" },
  { href: "/about", text: "About" },
  { href: "/blog", text: "Blog" },
];
---

<header>
  <nav>
    <h1><a href="/">My Blog</a></h1>
    <ul role="navigation">
      {
        links.map((link) => (
          <HeaderLink href={link.href}>{link.text}</HeaderLink>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  a {
    text-decoration: none;
  }

  header {
    box-shadow: inset 0 -1px 0 0 rgba(0, 0, 0, 0.1);
  }
  nav {
    max-width: 1024px;
    width: 100%;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;

    /* Logo */
    & h1 {
      font-size: 2.5rem;
      font-weight: 700;
    }

    /* Nav menu */
    & ul {
      display: flex;
      gap: 1rem;
      list-style: none;
      margin: 0;
      padding: 0;

      & li {
        padding: 5px 10px;
      }
    }
  }
</style>
